pipeline {
    agent any //dawdaw

    stages {
        stage('Clonar repositorio') {
            steps {
                git branch: 'main', url: 'https://github.com/SerGioAMM/test_php.git'
            }
        }

        stage('Verificar PHP instalado') {
            steps {
                sh 'php -v'
            }
        }

        stage('Pruebas básicas') {
            steps {
                sh 'php -l index.php'  // analiza si hay errores de sintaxis
                sh 'php vendor/bin/phpunit || true'
            }
        }
        stage('Run Nessus scan') {
            steps {
                sh '''
                /opt/nessus/sbin/nessuscli scan run 10 --xml report_scan.xml
                # esperar que termine y comprobar
                if [ ! -f report_scan.xml ]; then
                    echo "El reporte no se generó"; exit 1
                fi'''
            }
        }
        
        stage('Convertir reporte a PDF') {
            steps {
                echo 'Convirtiendo XML a PDF con Pandoc...'
                sh 'pandoc report_scan.xml -o report_scan.pdf'
            }
        }
    
        

        stage('Desplegar') {
            steps {
                echo 'Aquí iría el despliegue manual o copia al servidor si aplica.'
            }
        }
    }
}
